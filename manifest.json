{
  "name": "Clipboarding Notes",
  "description": "Making your life easier",
  "version": "1.2",
  "manifest_version": 3,
  "author": "Henrique Paim",
  "background": {
    "service_worker": "background.js"
  },
  "action":{
      "default_popup": "index.html",
      "default_title": "Clipboarding Notes"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
      "storage", "activeTab", "scripting"
  ],
  "host_permissions": [
      "" // e.g.: https://mysite.com/
  ]
}